{
  "version": "2.1.6",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "noEmitHelpers": true,
    "strictNullChecks": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "preserveConstEnums": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "atom": {
    "rewriteTsconfig": false
  },
  "include": [
    "./**/*.ts",
    "./**/*.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "typings/**"
  ]
}
